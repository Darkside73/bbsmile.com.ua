.container: #promotions.carousel.slide
  ol.carousel-indicators
    li.active data-target="#promotions" data-slide-to="0"
    li data-target="#promotions" data-slide-to="1"
    li data-target="#promotions" data-slide-to="2"
  .carousel-inner
    .item.active.bebecar data-title="Bebecar 2013 Новая коллекция": .row
      .span8
        = image_tag "content/bebecar-2013-new-collection.jpg"
      .span3
        h4
          = link_to page_path('universalnyie-kolyaski', brands: ['Bebecar'], utm_campaign: 'Bebecar 2013', utm_medium: 'main_page_promotions', utm_source: 'local') do
            | НОВАЯ
            br
            | коллекция
            br
            | Bebecar
            br
    .item data-title="Luvion ночничок в подарок"
      .image_map.luvion_night_light
        - luvion_promo_items(:night_light).each_with_index do |item, index|
          = link_to '', page_path(item.url, utm_campaign: 'luvion_night_light', utm_medium: 'main_page_promotions', utm_source: 'local'), class: "map-item map-item#{index+1}", title: item.title
        = image_tag "content/Nochnichok.jpg"
    .item data-title="Luvion термометр в подарок"
      .image_map.luvion_thermometer
        - luvion_promo_items(:thermometer).each_with_index do |item, index|
          = link_to '', page_path(item.url, utm_campaign: 'luvion_thermometer', utm_medium: 'main_page_promotions', utm_source: 'local'), class: "map-item map-item#{index+1}", title: item.title
        = image_tag "content/luvion_thermometer.jpg"

  a.left.carousel-control href="#promotions" data-slide="prev"
    i.icon-angle-left
  a.right.carousel-control href="#promotions" data-slide="next"
    i.icon-angle-right
