- from, to = Product.age_to_array range
- if from && from == to
  => "#{number_to_human from} #{Russian.p from.to_i, 'год', 'года', 'лет'}"
- else
  - if from && from > 0
    ' от
    - if from == 1
      ' 1 года
    - elsif from > 1
      => "#{number_to_human from} лет"
    -else
      => "#{number_to_human (from * 12).round} #{Russian.p (from * 12).round, 'месяца', 'месяцев', 'месяцев'}"

  - if to && to != Product::MAX_AGE_TO
    ' до
    - if to == 1
      ' 1 года
    - elsif to > 1
      => "#{number_to_human to} лет"
    - else
      => "#{number_to_human (to * 12).round} #{Russian.p (to * 12).round, 'месяца', 'месяцев', 'месяцев'}"
