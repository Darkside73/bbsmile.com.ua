table.table.table-striped
  thead
    tr
      th Название
      th Новинка
      th Хит продаж
      th Возраст
  tbody
    - @items.each do |product|
      tr
        td = product.title
        td
          - if product.novelty_changed?
            span.text-error> = product.novelty_was ? 'да' : 'нет'
            i.icon-long-arrow-right>
            span.text-success = product.novelty ? 'да' : 'нет'
        td
          - if product.hit_changed?
            span.text-error> = product.hit_was ? 'да' : 'нет'
            i.icon-long-arrow-right>
            span.text-success = product.hit ? 'да' : 'нет'
        td
          - if product.age_changed?
            span.text-error> = product.age_was
            i.icon-long-arrow-right>
            span.text-success> = product.age
