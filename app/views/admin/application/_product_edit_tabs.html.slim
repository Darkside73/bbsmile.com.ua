- content_for :box_title do
  ' Редактирование товара &mdash;
  strong = link_to @product.title, [:admin, @product], title: "Перейти к просмотру"
= render layout: 'boxed' do
  ul.nav.nav-tabs
    li*unless_active_attr('admin/products', 'edit') = link_to "Основное", [:edit, :admin, @product]
    li*unless_active_attr('admin/contents')
      - if @product.content.present?
        = link_to "Описание", edit_admin_content_path(@product.content)
      - else
        = link_to "Описание", [:new, :admin, @product, :content]

  .tab-content
    = yield