= render layout: 'boxed', locals: {title: 'Список категорий'} do
  = render layout: 'actions_panel' do
    = link_to "Добавить бренд", [:new, :admin, :brand], class: 'btn btn-success'
  - if @brands.any?
    table.table.brands-list.table-striped.table-hover
      thead
        tr
          th Название
          th Действия
      tbody
      - @brands.each do |brand|
        tr.item
          td
            = link_to brand.name, [:edit, :admin, brand], class: 'name'
          td
            => link_to 'Редактировать', [:edit, :admin, brand], class: 'btn btn-info'
            =  link_to 'Удалить', [:admin, brand], method: :delete, class: 'btn btn-warning'
